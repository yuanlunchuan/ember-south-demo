<div class="container">
  <h1>患者列表</h1>
  <hr />
  <a href="/app/patients/new" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-plus"></span>添加患者</a>

  <table class="table table-striped table-hover table-responsive">
    <thead>
      <tr>
        <th>#</th>
        <th>病案号</th>
        <th>身份证号</th>
        <th>医保号</th>
        <th>姓名</th>
        <th>性别</th>
        <th>住址</th>
        <th>邮编</th>
        <th>电话号码</th>
        <th>手机号</th>
        <th>电子邮箱</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |patient|}}
        <tr>
          <td>{{patient.id}}</td>
          <td>{{patient.mrno}}</td>
          <td>{{patient.idCardNo}}</td>
          <td>{{patient.insurancecode}}</td>
          <td>{{patient.patname}}</td>
          <td>{{patient.genderid}}</td>
          <td>{{patient.address}}</td>
          <td>{{patient.zipcode}}</td>
          <td>{{patient.phoneno}}</td>
          <td>{{patient.mobileno}}</td>
          <td>{{patient.email}}</td>
          <td>
            {{#link-to "app.patients.edit" patient}}编辑{{/link-to}}
            <button class="btn btn-danger btn-xs" {{action 'delete' patient}}>删除</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <div class=" text-right">
    <ul class="pagination">
      <li class="disabled"><a href="#">&laquo;</a></li>
      <li class="active"><a href="#">1</a></li>
      <li><a href="#">2</a></li>
      <li><a href="#">3</a></li>
      <li><a href="#">4</a></li>
      <li><a href="#">5</a></li>
      <li><a href="#">&raquo;</a></li>
    </ul>
  </div>
</div>
{{outlet}}
