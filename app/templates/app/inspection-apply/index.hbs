<div class="modal fade" id="inspection-apply-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="well">
          <form class="form-inline">
            {{#inline-form-field}}身份证号{{/inline-form-field}}
            {{#inline-form-field}}姓名{{/inline-form-field}}
            <div class="form-group">
              <lable>性别</lable>
              <select class="form-control input-sm">
                <option>男</option>
                <option>女</option>
              </select>
            </div>
            <div class="form-group">
              <label class="control-label">出生日期</label>
              {{date-picker date=model.birthday valueFormat='YYYY-MM-DD' class="form-control input-sm"}}
            </div>
            {{#inline-form-field}}人种{{/inline-form-field}}
            {{#inline-form-field}}血型{{/inline-form-field}}
            <div class="form-group">
              <lable>民族</lable>
              <select class="form-control input-sm">
                {{#each nations as |nation|}}
                  <option>{{nation}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <lable>婚姻状况</lable>
              <select class="form-control input-sm">
                <option>已婚</option>
                <option>未婚</option>
              </select>
            </div>
            {{#inline-form-field}}国籍{{/inline-form-field}}
            {{#inline-form-field}}省{{/inline-form-field}}
            {{#inline-form-field}}市{{/inline-form-field}}
            {{#inline-form-field}}区{{/inline-form-field}}
